@{
    ViewBag.Title = "Thanh Toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .checkout-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 60px 20px;
        font-family: 'Futura', 'Helvetica Neue', Arial, sans-serif;
    }

    .checkout-header {
        text-align: center;
        margin-bottom: 50px;
        padding-bottom: 30px;
        border-bottom: 1px solid #d4af37;
    }

    .checkout-header h1 {
        font-size: 2.5rem;
        font-weight: 300;
        letter-spacing: 3px;
        text-transform: uppercase;
        color: #1a1a1a;
        margin-bottom: 10px;
    }

    .checkout-header p {
        color: #666;
        font-size: 0.9rem;
        letter-spacing: 1px;
    }

    .lv-card {
        background: #fff;
        border: 1px solid #e5e5e5;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

    .lv-card:hover {
        box-shadow: 0 4px 20px rgba(0,0,0,0.12);
    }

    .card-header-lv {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        color: #d4af37;
        padding: 25px 30px;
        border: none;
    }

    .card-header-lv h5 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 400;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    .card-body-lv {
        padding: 35px;
    }

    .order-item {
        padding: 20px 0;
        border-bottom: 1px solid #f0f0f0;
        transition: background 0.3s ease;
    }

    .order-item:hover {
        background: #fafafa;
        padding-left: 10px;
        padding-right: 10px;
    }

    .order-item:last-child {
        border-bottom: none;
    }

    .product-name {
        font-size: 1rem;
        font-weight: 500;
        color: #1a1a1a;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .product-variant {
        color: #666;
        font-size: 0.85rem;
        letter-spacing: 0.3px;
        margin-bottom: 5px;
    }

    .product-quantity {
        color: #999;
        font-size: 0.9rem;
    }

    .summary-line {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        font-size: 0.95rem;
        color: #666;
    }

    .summary-divider {
        border-top: 1px solid #e5e5e5;
        margin: 20px 0;
    }

    .summary-total {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 25px 0;
        margin-top: 20px;
        border-top: 2px solid #d4af37;
    }

    .summary-total h5 {
        font-size: 1.2rem;
        font-weight: 500;
        letter-spacing: 1px;
        margin: 0;
    }

    .total-price {
        color: #1a1a1a;
        font-weight: 600;
    }

    .form-group-lv {
        margin-bottom: 25px;
    }

    .form-group-lv label {
        display: block;
        margin-bottom: 10px;
        color: #1a1a1a;
        font-size: 0.85rem;
        font-weight: 500;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .form-control-lv {
        width: 100%;
        padding: 15px 20px;
        border: 1px solid #d4d4d4;
        background: #fafafa;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        font-family: 'Helvetica Neue', Arial, sans-serif;
    }

    .form-control-lv:focus {
        outline: none;
        border-color: #d4af37;
        background: #fff;
        box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
    }

    .form-control-lv.is-invalid {
        border-color: #dc3545;
        background: #fff5f5;
    }

    .btn-lv-primary {
        width: 100%;
        padding: 18px 30px;
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        color: #d4af37;
        border: 2px solid #d4af37;
        font-size: 1rem;
        font-weight: 500;
        letter-spacing: 2px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

    .btn-lv-primary:hover {
        background: #d4af37;
        color: #1a1a1a;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(212, 175, 55, 0.3);
    }

    .btn-lv-secondary {
        width: 100%;
        padding: 15px 30px;
        background: transparent;
        color: #666;
        border: 1px solid #d4d4d4;
        font-size: 0.9rem;
        font-weight: 400;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 15px;
        text-decoration: none;
        display: block;
        text-align: center;
    }

    .btn-lv-secondary:hover {
        background: #f5f5f5;
        color: #1a1a1a;
        border-color: #999;
        text-decoration: none;
    }

    .gift-checkbox {
        display: flex;
        align-items: center;
        padding: 20px;
        background: #fafafa;
        border: 1px solid #e5e5e5;
        margin-top: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .gift-checkbox:hover {
        background: #f5f5f5;
        border-color: #d4af37;
    }

    .gift-checkbox input[type="checkbox"] {
        width: 20px;
        height: 20px;
        margin-right: 15px;
        cursor: pointer;
        accent-color: #d4af37;
    }

    .gift-checkbox label {
        margin: 0;
        cursor: pointer;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
        color: #1a1a1a;
    }

    .alert-lv {
        padding: 20px 25px;
        margin-bottom: 30px;
        background: #fff5f5;
        border-left: 4px solid #dc3545;
        color: #721c24;
        font-size: 0.9rem;
        letter-spacing: 0.3px;
    }

   
</style>

<div class="checkout-container">
    <div class="checkout-header">
        <h1>Thanh Toán</h1>
        <p>Hoàn tất đơn hàng của bạn</p>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-lv">@TempData["ErrorMessage"]</div>
    }

    <div class="row">
        <!-- Order Summary -->
        <div class="col-md-5 order-md-2 mb-4">
            <div class="lv-card">
                <div class="card-header-lv">
                    <h5>Tóm Tắt Đơn Hàng</h5>
                </div>
                <div class="card-body-lv">
                    @if (ViewBag.CartItems != null)
                    {
                        foreach (var item in ViewBag.CartItems)
                        {
                            <div class="order-item">
                                <div class="product-name">@item.ProductVariant.Product.ProductName</div>
                                <div class="product-variant">
                                    @item.ProductVariant.Color.ColorName • @item.ProductVariant.Size.SizeName
                                </div>
                                <div class="product-quantity">
                                    Số lượng: @item.Quantity × @item.ProductVariant.Price.ToString("N0") đ
                                </div>
                            </div>
                        }
                    }

                    <div class="summary-divider"></div>

                    <div class="summary-line">
                        <span>Tạm tính</span>
                        <strong>@ViewBag.SubTotal.ToString("N0") đ</strong>
                    </div>
                    <div class="summary-line">
                        <span>Phí vận chuyển</span>
                        <strong>@ViewBag.ShippingFee.ToString("N0") đ</strong>
                    </div>

                    <div class="summary-total">
                        <h5>Tổng cộng</h5>
                        <h5 class="total-price">@ViewBag.Total.ToString("N0") đ</h5>
                    </div>
                </div>
            </div>
        </div>

        <!-- Shipping Form -->
        <div class="col-md-7 order-md-1">
            <div class="lv-card">
                <div class="card-header-lv">
                    <h5>Thông Tin Giao Hàng</h5>
                </div>
                <div class="card-body-lv">
                    @using (Html.BeginForm("PlaceOrder", "Order", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group-lv">
                            <label for="shippingFullName">Họ và Tên *</label>
                            @{
                                string fullName = "";
                                if (ViewBag.User != null)
                                {
                                    fullName = ViewBag.User.FirstName + " " + ViewBag.User.LastName;
                                }
                            }
                            <input type="text" class="form-control-lv" id="shippingFullName" name="shippingFullName"
                                   value="@fullName" required />
                        </div>

                        <div class="form-group-lv">
                            <label for="shippingAddressLine1">Địa chỉ *</label>
                            <input type="text" class="form-control-lv" id="shippingAddressLine1" name="shippingAddressLine1"
                                   placeholder="Số nhà, tên đường" required />
                        </div>

                        <div class="form-group-lv">
                            <label for="shippingAddressLine2">Địa chỉ 2 (Tùy chọn)</label>
                            <input type="text" class="form-control-lv" id="shippingAddressLine2" name="shippingAddressLine2"
                                   placeholder="Phường/Xã, Quận/Huyện" />
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group-lv">
                                    <label for="shippingCity">Thành phố *</label>
                                    <input type="text" class="form-control-lv" id="shippingCity" name="shippingCity"
                                           placeholder="Hà Nội, TP.HCM..." required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group-lv">
                                    <label for="shippingPostalCode">Mã bưu điện *</label>
                                    <input type="text" class="form-control-lv" id="shippingPostalCode" name="shippingPostalCode"
                                           placeholder="700000" required />
                                </div>
                            </div>
                        </div>

                        <div class="form-group-lv">
                            <label for="shippingCountry">Quốc gia *</label>
                            <input type="text" class="form-control-lv" id="shippingCountry" name="shippingCountry"
                                   value="Việt Nam" required />
                        </div>

                        <div class="form-group-lv">
                            <label for="paymentMethod">Phương thức thanh toán *</label>
                            <select class="form-control-lv" id="paymentMethod" name="paymentMethod" required>
                                <option value="">-- Chọn phương thức --</option>
                                <option value="COD" selected>Thanh toán khi nhận hàng (COD)</option>
                                <option value="BankTransfer">Chuyển khoản ngân hàng</option>
                                <option value="CreditCard">Thẻ tín dụng</option>
                            </select>
                        </div>

                        <div class="gift-checkbox">
                            <input type="checkbox" id="isGift" name="isGift" value="true" />
                            <label for="isGift">Đây là quà tặng</label>
                        </div>

                        <div class="form-group-lv" id="giftMessageGroup" style="display: none; margin-top: 20px;">
                            <label for="giftMessage">Lời nhắn quà tặng</label>
                            <textarea class="form-control-lv" id="giftMessage" name="giftMessage" rows="4"
                                      placeholder="Nhập lời nhắn của bạn..." style="resize: vertical;"></textarea>
                        </div>

                        <button type="submit" class="btn-lv-primary">
                            <i class="fas fa-check-circle"></i> Hoàn Tất Đặt Hàng
                        </button>

                        <a href="@Url.Action("Index", "Cart")" class="btn-lv-secondary">
                            <i class="fas fa-arrow-left"></i> Quay Lại Giỏ Hàng
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Toggle gift message field with smooth animation
            $('#isGift').change(function () {
                if ($(this).is(':checked')) {
                    $('#giftMessageGroup').slideDown(300);
                } else {
                    $('#giftMessageGroup').slideUp(300);
                    $('#giftMessage').val('');
                }
            });

            // Enhanced form validation
            $('form').on('submit', function (e) {
                var isValid = true;

                // Check required fields
                $(this).find('[required]').each(function () {
                    if (!$(this).val()) {
                        isValid = false;
                        $(this).addClass('is-invalid');
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                    // Scroll to first invalid field
                    $('html, body').animate({
                        scrollTop: $('.is-invalid').first().offset().top - 100
                    }, 500);
                }
            });

            // Remove invalid class on input
            $('.form-control-lv').on('input change', function () {
                if ($(this).val()) {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}