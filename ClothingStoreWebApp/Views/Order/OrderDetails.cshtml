@model ClothingStoreWebApp.Models.Order
@{
    ViewBag.Title = "Chi Tiết Đơn Hàng - " + Model.OrderNumber;
}
@Html.AntiForgeryToken()

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>
                        <i class="fas fa-file-invoice"></i> Chi Tiết Đơn Hàng
                    </h2>
                    <p class="text-muted mb-0">Mã đơn hàng: <strong class="text-primary">@Model.OrderNumber</strong></p>
                </div>
                <a href="@Url.Action("MyOrders")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Quay Lại
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @* Order Status Timeline *@
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-shipping-fast"></i> Trạng Thái Đơn Hàng
                    </h5>
                </div>
                <div class="card-body">
                    <div class="order-timeline">
                        @{
                            var statuses = new[] { "Pending", "Processing", "Shipped", "Delivered" };
                            var currentStatusIndex = Array.IndexOf(statuses, Model.OrderStatus.StatusName);

                            if (Model.OrderStatus.StatusName == "Cancelled")
                            {
                                <div class="alert alert-danger">
                                    <i class="fas fa-times-circle"></i> <strong>Đơn hàng đã bị hủy</strong>
                                </div>
                            }
                            else
                            {
                                <div class="row text-center">
                                    @for (int i = 0; i < statuses.Length; i++)
                                    {
                                        var isActive = i <= currentStatusIndex;
                                        var statusName = "";
                                        switch (statuses[i])
                                        {
                                            case "Pending": statusName = "Chờ xử lý"; break;
                                            case "Processing": statusName = "Đang xử lý"; break;
                                            case "Shipped": statusName = "Đang giao"; break;
                                            case "Delivered": statusName = "Đã giao"; break;
                                        }

                                        <div class="col-3">
                                            <div class="timeline-item @(isActive ? "active" : "")">
                                                <div class="timeline-icon @(isActive ? "bg-success" : "bg-secondary")">
                                                    <i class="fas @(i == 0 ? "fa-clipboard-list" : i == 1 ? "fa-cogs" : i == 2 ? "fa-truck" : "fa-check-circle")"></i>
                                                </div>
                                                <p class="small mb-0 mt-2 @(isActive ? "fw-bold" : "text-muted")">@statusName</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            @* Order Items *@
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-box"></i> Sản Phẩm Đã Đặt
                    </h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="row mb-3 pb-3 border-bottom">
                            <div class="col-md-2">
                                @if (item.ProductVariant?.Product?.ProductImages != null && item.ProductVariant.Product.ProductImages.Any())
                                {
                                    <img src="@item.ProductVariant.Product.ProductImages.FirstOrDefault()?.ImageURL"
                                         alt="@item.ProductName"
                                         class="img-fluid rounded" />
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 100px;">
                                        <i class="fas fa-image fa-2x text-muted"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-10">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="mb-1">@item.ProductName</h6>
                                        <p class="text-muted small mb-1">
                                            <span class="badge bg-light text-dark">@item.ColorName</span>
                                            <span class="badge bg-light text-dark">@item.SizeName</span>
                                            <span class="text-muted">SKU: @item.SKU</span>
                                        </p>
                                        <p class="mb-0">
                                            <span class="text-muted">Số lượng:</span> <strong>@item.Quantity</strong> ×
                                            <span class="text-muted">@item.UnitPrice.ToString("N0") ₫</span>
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <h6 class="text-primary mb-0">@item.TotalPrice.ToString("N0") ₫</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @* Shipping Address *@
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-map-marker-alt"></i> Địa Chỉ Giao Hàng
                    </h6>
                </div>
                <div class="card-body">
                    <address class="mb-0">
                        <strong>@Model.ShippingFullName</strong><br />
                        @Model.ShippingAddressLine1<br />
                        @if (!string.IsNullOrEmpty(Model.ShippingAddressLine2))
                        {
                            @Model.ShippingAddressLine2<br />
                        }
                        @Model.ShippingCity, @Model.ShippingPostalCode<br />
                        @Model.ShippingCountry
                    </address>
                </div>
            </div>

            @* Gift Message *@
            @if (Model.IsGift && !string.IsNullOrEmpty(Model.GiftMessage))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-gift"></i> Lời Nhắn Quà Tặng
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="fst-italic mb-0">"@Model.GiftMessage"</p>
                    </div>
                </div>
            }
        </div>

        @* Order Summary Sidebar *@
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-receipt"></i> Tóm Tắt Đơn Hàng
                    </h6>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-7">Tạm tính:</dt>
                        <dd class="col-5 text-end">@Model.SubTotal.ToString("N0") ₫</dd>

                        <dt class="col-7">Phí vận chuyển:</dt>
                        <dd class="col-5 text-end">@Model.ShippingAmount.ToString("N0") ₫</dd>

                        @if (Model.TaxAmount > 0)
                        {
                            <dt class="col-7">Thuế:</dt>
                            <dd class="col-5 text-end">@Model.TaxAmount.ToString("N0") ₫</dd>
                        }

                        @if (Model.DiscountAmount > 0)
                        {
                            <dt class="col-7 text-success">Giảm giá:</dt>
                            <dd class="col-5 text-end text-success">-@Model.DiscountAmount.ToString("N0") ₫</dd>
                        }
                    </dl>

                    <hr />

                    <dl class="row mb-0">
                        <dt class="col-7"><h5 class="mb-0">Tổng cộng:</h5></dt>
                        <dd class="col-5 text-end"><h5 class="mb-0 text-primary">@Model.TotalAmount.ToString("N0") ₫</h5></dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-credit-card"></i> Thanh Toán
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>Phương thức:</strong><br />
                        @Model.PaymentMethod
                    </p>
                    <p class="mb-0">
                        <strong>Trạng thái:</strong><br />
                        <span class="badge bg-@(Model.PaymentStatus == "Paid" ? "success" : "warning")">
                            @Model.PaymentStatus
                        </span>
                    </p>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <p class="small text-muted mb-3">
                        <i class="fas fa-clock"></i> Ngày đặt: @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")
                    </p>

                    @* Action Buttons *@
                    @if (Model.OrderStatus.StatusName == "Shipped")
                    {
                        <div class="d-grid gap-2">
                            @using (Html.BeginForm("ConfirmReceived", "Order", new { id = Model.OrderID }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button type="button" class="btn btn-success" onclick="confirmReceived(@Model.OrderID)">
                                    <i class="fas fa-check me-2"></i>Đã Nhận Hàng
                                </button>
                            }
                        </div>
                    }
                    else if (Model.OrderStatus.StatusName == "Pending")
                    {
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-danger" onclick="requestCancelOrder(@Model.OrderID)">
                                <i class="fas fa-times"></i> Yêu Cầu Hủy Đơn
                            </button>
                        </div>
                    }
                    else if (Model.OrderStatus.StatusName == "Delivered")
                    {
                        <div class="alert alert-success mb-0">
                            <i class="fas fa-check-circle"></i> Đơn hàng đã hoàn thành
                        </div>
                    }
                    else if (Model.OrderStatus.StatusName == "Pending Cancellation")
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-hourglass-half"></i> Đang chờ admin duyệt hủy đơn
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .order-timeline {
            padding: 20px 0;
        }

        .timeline-item {
            position: relative;
        }

        .timeline-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            color: white;
            font-size: 24px;
        }

        .timeline-item:not(:last-child):before {
            content: '';
            position: absolute;
            top: 30px;
            left: 50%;
            width: 100%;
            height: 2px;
            background: #dee2e6;
        }

        .timeline-item.active:not(:last-child):before {
            background: #198754;
        }
    </style>
}

@section Scripts {
    <script>

       
        function requestCancelOrder(orderId) {
            var reason = prompt('Vui lòng nhập lý do hủy đơn:');

            if (!reason || reason.trim() === '') {
                alert('Bạn phải nhập lý do hủy đơn');
                return;
            }

            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '@Url.Action("RequestCancelOrder", "Order")',
                type: 'POST',
                data: {
                    __RequestVerificationToken: token,
                    orderId: orderId,
                    reason: reason
                },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function(xhr, status, error) {
                    console.log('Error:', xhr);
                    alert('Có lỗi xảy ra: ' + (xhr.responseJSON?.message || error));
                }
            });
        }


           function confirmReceived(orderId) {
            console.log('confirmReceived called with orderId:', orderId);

            if (confirm('Xác nhận bạn đã nhận được hàng?')) {
                $.ajax({
                    url: '@Url.Action("ConfirmReceived", "Order")',
                    type: 'POST',
                    data: {
                        orderId: orderId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        console.log('Response:', response);
                        if (response.success) {
                            alert(response.message);
                            // Redirect về MyOrders
                            window.location.href = '@Url.Action("MyOrders", "Order")';
                        } else {
                            alert('Lỗi: ' + response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('AJAX Error:', status, error);
                        console.error('Response:', xhr.responseText);
                        alert('Có lỗi xảy ra khi xử lý yêu cầu: ' + error);
                    }
                });
            }
        }
    </script>

}
