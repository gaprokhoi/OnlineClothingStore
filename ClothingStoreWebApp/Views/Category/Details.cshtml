@using System.Linq
@model ClothingStoreWebApp.Models.Category
@{
    ViewBag.Title = "Chi Tiết Danh Mục - " + Model.CategoryName;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle"></i>
                        Chi Tiết Danh Mục
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageURL))
                            {
                                <img src="@Model.ImageURL" alt="@Model.CategoryName" class="img-fluid rounded mb-3" style="max-height: 200px;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded mb-3" style="height: 200px;">
                                    <i class="fas fa-folder fa-4x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-9">
                            <table class="table table-bordered">
                                <tr>
                                    <th style="width: 200px;">ID</th>
                                    <td>@Model.CategoryID</td>
                                </tr>
                                <tr>
                                    <th>Tên Danh Mục</th>
                                    <td><strong>@Model.CategoryName</strong></td>
                                </tr>
                                <tr>
                                    <th>Cấu Trúc</th>
                                    <td>
                                        @if (Model.ParentCategory != null)
                                        {
                                            <span class="badge bg-primary">Danh mục con</span>
                                            <br />
                                            <small class="text-muted">
                                                <i class="fas fa-arrow-up"></i>
                                                Thuộc: <strong>@Model.ParentCategory.CategoryName</strong>
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Danh mục gốc</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Trạng thái</th>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Đang hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times-circle"></i> Đã ẩn
                                            </span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Thứ tự sắp xếp</th>
                                    <td>@Model.SortOrder</td>
                                </tr>
                                <tr>
                                    <th>Ngày tạo</th>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr />
                        <h5>Mô Tả:</h5>
                        <p class="text-muted">@Model.Description</p>
                    }

                    @if (Model.SubCategories != null && Model.SubCategories.Any())
                    {
                        <hr />
                        <h5>Danh Mục Con (@Model.SubCategories.Count()):</h5>
                        <div class="row">
                            @foreach (var subCategory in Model.SubCategories.OrderBy(s => s.SortOrder).ThenBy(s => s.CategoryName))
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card @(subCategory.IsActive ? "border-success" : "border-secondary")">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                @subCategory.CategoryName
                                                @if (subCategory.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Hidden</span>
                                                }
                                            </h6>
                                            <p class="card-text small text-muted">
                                                ID: @subCategory.CategoryID |
                                                Sắp xếp: @subCategory.SortOrder
                                            </p>
                                            <p class="card-text small text-muted">
                                                @if (subCategory.Products != null && subCategory.Products.Any())
                                                {
                                                    <i class="fas fa-box"></i> @subCategory.Products.Count();
                                                                            }
                                                else
                                                {
                                                    <i class="fas fa-box-open"></i>;
                                                                            }
                                            </p>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="@Url.Action("Details", new { id = subCategory.CategoryID })" class="btn btn-outline-info btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = subCategory.CategoryID })" class="btn btn-outline-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (Model.Products != null && Model.Products.Any())
                    {
                        <hr />
                        <h5>Sản Phẩm Trong Danh Mục (@Model.Products.Count()):</h5>
                        <div class="row">
                            @foreach (var product in Model.Products.Where(p => p.IsActive).Take(6).OrderByDescending(p => p.CreatedAt))
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-title">@product.ProductName</h6>
                                            <p class="card-text text-muted small">
                                                @product.BasePrice.ToString("N0") VNĐ
                                                @if (product.IsFeatured)
                                                {
                                                    <span class="badge bg-warning text-dark">Featured</span>
                                                }
                                            </p>
                                            <p class="card-text small text-muted">
                                                ID: @product.ProductID |
                                                @product.CreatedAt.ToString("dd/MM/yyyy")
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        if (Model.Products.Count(p => p.IsActive) > 6)
                        {
                            <p class="text-center text-muted">
                                ... và @(Model.Products.Count(p => p.IsActive) - 6) sản phẩm khác
                            </p>
                        }
                        if (Model.Products.Any(p => !p.IsActive))
                        {
                            <p class="text-center text-muted">
                                <i class="fas fa-eye-slash"></i> @Model.Products.Count(p => !p.IsActive) sản phẩm đã ẩn
                            </p>
                        }
                    }
                    else
                    {
                        <hr />
                        <div class="alert alert-info text-center">
                            <i class="fas fa-box-open fa-2x mb-2"></i>
                            <h6>Chưa có sản phẩm</h6>
                            <p class="mb-0">Danh mục này chưa có sản phẩm nào.</p>
                        </div>
                    }

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay Lại
                        </a>
                        <div>
                            <a href="@Url.Action("Edit", new { id = Model.CategoryID })" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Chỉnh Sửa
                            </a>
                            @if (Model.IsActive)
                            {
                                using (Html.BeginForm("SoftDelete", "Category", new { id = Model.CategoryID }, FormMethod.Post, new { @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-warning" onclick="return confirm('Bạn có chắc muốn ẩn danh mục này?')">
                                        <i class="fas fa-eye-slash"></i> Ẩn
                                    </button>
                                }
                            }
                            else
                            {
                                using (Html.BeginForm("Restore", "Category", new { id = Model.CategoryID }, FormMethod.Post, new { @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success" onclick="return confirm('Bạn có chắc muốn khôi phục danh mục này?')">
                                        <i class="fas fa-eye"></i> Khôi Phục
                                    </button>
                                }
                            }
                            <a href="@Url.Action("Delete", new { id = Model.CategoryID })" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xóa Vĩnh Viễn
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
