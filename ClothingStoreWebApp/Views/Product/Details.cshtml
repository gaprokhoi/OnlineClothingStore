<script>
// Global variables
var selectedSizeId = null;
var selectedColorId = null;
var selectedVariantId = null;

// Select Size Function
function selectSize(button) {
    var sizeButtons = document.querySelectorAll('.size-btn');
    sizeButtons.forEach(function(btn) {
        btn.classList.remove('active');
    });

    button.classList.add('active');
    selectedSizeId = button.getAttribute('data-size-id');
    checkSelection();
}

// Select Color Function
function selectColor(button) {
    var colorButtons = document.querySelectorAll('.color-btn');
    colorButtons.forEach(function(btn) {
        btn.classList.remove('active');
    });

    button.classList.add('active');
    selectedColorId = button.getAttribute('data-color-id');
    checkSelection();
}

// Change Main Image
function changeMainImage(thumbnail) {
    var mainImg = document.getElementById('mainProductImage');
    mainImg.src = thumbnail.src;

    var thumbnails = document.querySelectorAll('.thumbnail-img');
    thumbnails.forEach(function(img) {
        img.classList.remove('active');
    });
    thumbnail.classList.add('active');
}

// Check Selection and Get Variant ID
function checkSelection() {
    var addToCartBtn = document.getElementById('add-to-cart-btn');
    var statusDiv = document.getElementById('selection-status');

    if (selectedSizeId && selectedColorId) {
        var xhr = new XMLHttpRequest();
        xhr.open('GET', '@Url.Action("GetVariantByOptions", "Product")?productId=@Model.ProductID&sizeId=' + selectedSizeId + '&colorId=' + selectedColorId, true);

        xhr.onreadystatechange = function() {
            if (xhr.readyState === 4 && xhr.status === 200) {
                try {
                    var result = JSON.parse(xhr.responseText);

                    if (result.success && result.variant) {
                        selectedVariantId = result.variant.variantId;
                        addToCartBtn.disabled = false;

                        statusDiv.className = 'selection-status success';
                        statusDiv.innerHTML = '<i class="fas fa-check-circle"></i><span>Sẵn sàng thêm vào giỏ hàng!</span>';

                        if (result.variant.price) {
                            document.getElementById('current-price').textContent = result.variant.price.toLocaleString() + ' VNĐ';
                        }
                    } else {
                        selectedVariantId = null;
                        addToCartBtn.disabled = true;
                        statusDiv.className = 'selection-status error';
                        statusDiv.innerHTML = '<i class="fas fa-times-circle"></i><span>Tổ hợp này không có sẵn</span>';
                    }
                } catch (e) {
                    selectedVariantId = null;
                    addToCartBtn.disabled = true;
                }
            }
        };

        xhr.send();
    } else {
        addToCartBtn.disabled = true;
        selectedVariantId = null;

        var message = 'Vui lòng chọn size và màu sắc';
        if (selectedSizeId && !selectedColorId) {
            message = 'Vui lòng chọn màu sắc';
        } else if (!selectedSizeId && selectedColorId) {
            message = 'Vui lòng chọn kích thước';
        }

        statusDiv.className = 'selection-status info';
        statusDiv.innerHTML = '<i class="fas fa-info-circle"></i><span>' + message + '</span>';
    }
}
// ⭐ Hàm tải sản phẩm liên quan
function loadRelatedProducts() {
    var relatedContainer = $('#related-products');

    if (!relatedContainer.length) {
        return;
    }

    var categoryId = @Model.CategoryID;
    var brandId = @Model.BrandID;
    var currentProductId = @Model.ProductID;

    // Hiển thị trạng thái đang tải
    relatedContainer.html('<div class="col-12 text-center"><i class="fas fa-spinner fa-spin fa-2x text-muted"></i><p class="text-muted mt-2">Đang tải sản phẩm...</p></div>');

    // Gọi AJAX
    $.ajax({
        url: '@Url.Action("GetRelatedProductsAsJson", "Product")',
        type: 'GET',
        data: {
            categoryId: categoryId,
            brandId: brandId,
            currentProductId: currentProductId
        },
        dataType: 'json',
        success: function(products) {
            relatedContainer.empty();

            if (products && products.length > 0) {
                $.each(products, function(index, product) {
                    var productUrl = '@Url.Action("Details", "Product", new { id = "PLACEHOLDER" })'.replace('PLACEHOLDER', product.ProductID);
                    var priceFormatted = product.BasePrice.toLocaleString('vi-VN');

                    var productHtml =
                        '<div class="col-6 col-md-3 mb-4">' +
                        '    <div class="card h-100 product-card">' +
                        '        <a href="' + productUrl + '">' +
                        '            <img src="' + product.ImageURL + '" class="card-img-top" alt="' + product.ProductName + '">' +
                        '        </a>' +
                        '        <div class="card-body d-flex flex-column">' +
                        '            <h5 class="card-title">' +
                        '                <a href="' + productUrl + '" title="' + product.ProductName + '">' + product.ProductName + '</a>' +
                        '            </h5>' +
                        '            <p class="card-text text-primary fw-bold mt-auto">' + priceFormatted + ' VNĐ</p>' +
                        '        </div>' +
                        '    </div>' +
                        '</div>';

                    relatedContainer.append(productHtml);
                });
            } else {
                relatedContainer.html('<div class="col-12"><p class="text-muted text-center">Không tìm thấy sản phẩm liên quan.</p></div>');
            }
        },
        error: function() {
            relatedContainer.html('<div class="col-12"><p class="text-danger text-center">Không thể tải sản phẩm liên quan.</p></div>');
        }
    });
}

// Page Ready
document.addEventListener('DOMContentLoaded', function() {
    var quantityInput = document.getElementById('quantity');

    // Quantity Controls
    var quantityButtons = document.querySelectorAll('.quantity-btn');
    quantityButtons.forEach(function(btn) {
        btn.addEventListener('click', function() {
            var currentVal = parseInt(quantityInput.value) || 1;
            var action = this.getAttribute('data-action');

            if (action === 'increase' && currentVal < 10) {
                quantityInput.value = currentVal + 1;
            } else if (action === 'decrease' && currentVal > 1) {
                quantityInput.value = currentVal - 1;
            }
        });
        loadRelatedProducts();

    });

    // Add to Cart
    document.getElementById('add-to-cart-btn').addEventListener('click', function() {
        if (!selectedVariantId) {
            showNotification('error', 'Vui lòng chọn size và màu sắc!');
            return;
        }

        var quantity = parseInt(document.getElementById('quantity').value) || 1;
        var button = this;
        var originalHtml = button.innerHTML;

        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang thêm...';

        $.ajax({
            url: '@Url.Action("AddToCart", "Cart")',
            type: 'POST',
            data: {
                variantId: selectedVariantId,
                quantity: quantity,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            },
            dataType: 'json',
            success: function(result) {
                if (result.success) {
                    button.innerHTML = '<i class="fas fa-check"></i> Đã thêm!';
                    button.classList.add('success');

                    showNotification('success', result.message || 'Đã thêm vào giỏ hàng!');

                    setTimeout(function() {
                        button.disabled = false;
                        button.innerHTML = originalHtml;
                        button.classList.remove('success');
                    }, 2000);
                } else {
                    button.disabled = false;
                    button.innerHTML = originalHtml;
                    showNotification('error', result.message || 'Không thể thêm vào giỏ hàng');
                }
            },
            error: function() {
                button.disabled = false;
                button.innerHTML = originalHtml;
                showNotification('error', 'Có lỗi xảy ra!');
            }
        });
    });

