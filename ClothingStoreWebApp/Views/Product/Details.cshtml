@model ClothingStoreWebApp.Models.Product
@{
    ViewBag.Title = Model.ProductName + " - Chi tiết";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
            <li class="breadcrumb-item">@Html.ActionLink("Sản phẩm", "Index", "Product")</li>
            <li class="breadcrumb-item active">@Model.ProductName</li>
        </ol>
    </nav>

    <div class="row">
        @* Product Images *@
        <div class="col-md-6">
            <div class="product-gallery">
                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    var images = Model.ProductImages.OrderBy(pi => pi.SortOrder).ToList();

                    @* Main Image *@
                    <div class="main-image-wrapper mb-3">
                        <img id="mainProductImage" src="@images.FirstOrDefault().ImageURL" alt="@Model.ProductName" class="main-image img-fluid rounded shadow">
                    </div>

                    @* Thumbnail Images *@
                    if (images.Count > 1)
                    {
                        <div class="thumbnail-images d-flex gap-2 flex-wrap justify-content-center">
                            @foreach (var image in images.Take(5))
                            {
                                <div class="thumbnail-wrapper">
                                    <img src="@image.ImageURL" alt="@Model.ProductName" class="thumbnail-img rounded"
                                         onclick="changeMainImage(this)">
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="no-image text-center p-5 border rounded bg-light">
                        <i class="fas fa-image fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Không có hình ảnh</p>
                    </div>
                }
            </div>
        </div>

        @* Product Information *@
        <div class="col-md-6">
            <div class="product-info">
                @* Product Title *@
                <h1 class="product-title h2 mb-3">@Model.ProductName</h1>

                @* Category and Brand *@
                <div class="product-meta mb-3">
                    <span class="badge bg-secondary me-2">@Model.Category.CategoryName</span>
                    <span class="badge bg-info">@Model.Brand.BrandName</span>
                    @if (Model.Collection != null)
                    {
                        <span class="badge bg-success ms-1">@Model.Collection.CollectionName</span>
                    }
                </div>

                @* Description *@
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="product-description mb-4">
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }

                @* Price *@
                <div class="price-section mb-4">
                    <span class="h3 text-primary fw-bold price-display" id="current-price">@Model.BasePrice.ToString("N0") VNĐ</span>
                </div>

                @* SIZE SELECTION *@
                @if (ViewBag.AvailableSizes != null && ((List<ClothingStoreWebApp.Models.Size>)ViewBag.AvailableSizes).Any())
                {
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Kích thước:</h6>
                        <div class="size-options d-flex flex-wrap gap-2">
                            @foreach (var size in (List<ClothingStoreWebApp.Models.Size>)ViewBag.AvailableSizes)
                            {
                                <button type="button" class="size-btn"
                                        data-size-id="@size.SizeID"
                                        data-size-name="@size.SizeName"
                                        onclick="selectSize(this)">
                                    @size.SizeName
                                </button>
                            }
                        </div>
                        <small class="text-muted">* Vui lòng chọn kích thước</small>
                    </div>
                }

                @* COLOR SELECTION *@
                @if (ViewBag.AvailableColors != null && ((List<ClothingStoreWebApp.Models.Color>)ViewBag.AvailableColors).Any())
                {
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Màu sắc:</h6>
                        <div class="color-options d-flex flex-wrap gap-2">
                            @foreach (var color in (List<ClothingStoreWebApp.Models.Color>)ViewBag.AvailableColors)
                            {
                                <button type="button" class="color-btn"
                                        data-color-id="@color.ColorID"
                                        data-color-name="@color.ColorName"
                                        onclick="selectColor(this)">
                                    <span class="color-preview" style="background-color: @color.ColorCode;"></span>
                                    <span class="color-name">@color.ColorName</span>
                                </button>
                            }
                        </div>
                        <small class="text-muted">* Vui lòng chọn màu sắc</small>
                    </div>
                }

                @* Selection Status *@
                <div id="selection-status" class="selection-status mb-3">
                    <i class="fas fa-info-circle"></i>
                    <span>Vui lòng chọn size và màu sắc</span>
                </div>

                @* Quantity Selection *@
                <div class="quantity-section mb-4">
                    <h6 class="fw-bold mb-3">Số lượng:</h6>
                    <div class="quantity-controls">
                        <button class="quantity-btn" type="button" data-action="decrease">
                            <i class="fas fa-minus"></i>
                        </button>
                        <input type="number" class="quantity-input" id="quantity" value="1" min="1" max="10" readonly>
                        <button class="quantity-btn" type="button" data-action="increase">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>

                @* Add to Cart Button *@
                <div class="cart-actions mb-4">
                    <button type="button" class="btn-add-cart" id="add-to-cart-btn" disabled>
                        <i class="fas fa-shopping-cart me-2"></i>Thêm vào giỏ hàng
                    </button>
                    <button type="button" class="btn-wishlist">
                        <i class="fas fa-heart"></i>
                    </button>
                </div>

                @* Material & Care *@
                @if (!string.IsNullOrEmpty(Model.Material) || !string.IsNullOrEmpty(Model.CareInstructions))
                {
                    <div class="product-details-card">
                        <h6 class="fw-bold mb-3">Thông tin chi tiết</h6>
                        @if (!string.IsNullOrEmpty(Model.Material))
                        {
                            <div class="detail-item">
                                <i class="fas fa-tshirt text-primary"></i>
                                <div>
                                    <strong>Chất liệu:</strong>
                                    <span class="text-muted">@Model.Material</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.CareInstructions))
                        {
                            <div class="detail-item">
                                <i class="fas fa-hand-sparkles text-primary"></i>
                                <div>
                                    <strong>Hướng dẫn bảo quản:</strong>
                                    <span class="text-muted">@Model.CareInstructions</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    @* Related Products Section *@
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-4">Sản phẩm liên quan</h3>
            <div class="row" id="related-products">
                @* Related products will be loaded here *@
            </div>
        </div>
    </div>
</div>

