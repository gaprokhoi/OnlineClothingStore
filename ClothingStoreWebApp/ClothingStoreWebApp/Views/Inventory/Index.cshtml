@model IEnumerable<ClothingStoreWebApp.ViewModels.InventoryViewModel>

@{
    ViewBag.Title = "Quản lý kho hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <h2><i class="fas fa-warehouse"></i> Quản lý kho hàng</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    @* Dashboard Statistics *@
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h5><i class="fas fa-boxes"></i> Tổng Variants</h5>
                    <h3>@ViewBag.TotalVariants</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h5><i class="fas fa-box-open"></i> Tổng hàng</h5>
                    <h3>@ViewBag.TotalQuantityOnHand</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center">
                    <h5><i class="fas fa-lock"></i> Đã đặt</h5>
                    <h3>@ViewBag.TotalQuantityReserved</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h5><i class="fas fa-check-circle"></i> Khả dụng</h5>
                    <h3>@ViewBag.TotalAvailable</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h5><i class="fas fa-exclamation-triangle"></i> Sắp hết</h5>
                    <h3>@ViewBag.LowStockVariants</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h5><i class="fas fa-times-circle"></i> Hết hàng</h5>
                    <h3>@ViewBag.OutOfStockVariants</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5><i class="fas fa-dollar-sign"></i> Tổng giá trị kho hàng</h5>
                    <h2>@ViewBag.TotalInventoryValue.ToString("N0") VNĐ</h2>
                </div>
            </div>
        </div>
    </div>

    @* Quick Links *@
    <div class="row mb-3">
        <div class="col-md-12">
            <a href="@Url.Action("LowStock")" class="btn btn-warning mr-2">
                <i class="fas fa-exclamation-triangle"></i> Xem hàng sắp hết
            </a>
            <a href="@Url.Action("OutOfStock")" class="btn btn-danger">
                <i class="fas fa-times-circle"></i> Xem hàng hết
            </a>
        </div>
    </div>

    @* Filters *@
    <div class="card mb-3">
        <div class="card-body">
            @using (Html.BeginForm("Index", "Inventory", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="form-group mr-2">
                    @Html.DropDownList("categoryId", (SelectList)ViewBag.Categories, "-- Chọn danh mục --", new { @class = "form-control" })
                </div>
                <div class="form-group mr-2">
                    @Html.DropDownList("brandId", (SelectList)ViewBag.Brands, "-- Chọn thương hiệu --", new { @class = "form-control" })
                </div>
                <div class="form-group mr-2">
                    <select name="stockStatus" class="form-control">
                        <option value="">-- Trạng thái kho --</option>
                        <option value="instock" @(ViewBag.CurrentStockStatus == "instock" ? "selected" : "")>Còn nhiều hàng</option>
                        <option value="lowstock" @(ViewBag.CurrentStockStatus == "lowstock" ? "selected" : "")>Sắp hết</option>
                        <option value="reserved" @(ViewBag.CurrentStockStatus == "reserved" ? "selected" : "")>Có hàng đặt trước</option>
                        <option value="outofstock" @(ViewBag.CurrentStockStatus == "outofstock" ? "selected" : "")>Hết hàng</option>
                    </select>
                </div>
                <div class="form-group mr-2">
                    <input type="text" name="search" value="@ViewBag.CurrentSearch" placeholder="Tìm kiếm (Tên, SKU, Màu, Size)..." class="form-control" style="width: 250px;" />
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Lọc</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary ml-2"><i class="fas fa-redo"></i> Reset</a>
            }
        </div>
    </div>

    @* Inventory Table *@
    <div class="card">
        <div class="card-header">
            <h5>Danh sách kho hàng (@Model.Count() variants)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm">
                    <thead class="thead-dark">
                        <tr>
                            <th>Hình</th>
                            <th>Tên sản phẩm</th>
                            <th>SKU</th>
                            <th>Màu</th>
                            <th>Size</th>
                            <th>Danh mục</th>
                            <th>Thương hiệu</th>
                            <th>Giá</th>
                            <th>Có sẵn</th>
                            <th>Đã đặt</th>
                            <th>Khả dụng</th>
                            <th>Trạng thái</th>
                            <th>Cập nhật</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.QuantityOnHand == 0 ? "table-danger" : item.AvailableQuantity <= 20 && item.AvailableQuantity > 0 ? "table-warning" : "")">
                                <td>
                                    <img src="@item.ImageURL" alt="@item.ProductName" style="width: 40px; height: 40px; object-fit: cover;" />
                                </td>
                                <td>
                                    <strong>@item.ProductName</strong>
                                </td>
                                <td><small>@item.VariantSKU</small></td>
                                <td>@item.VariantColor</td>
                                <td>@item.VariantSize</td>
                                <td>@item.CategoryName</td>
                                <td>@item.BrandName</td>
                                <td>@item.VariantPrice.ToString("N0")</td>
                                <td>
                                    <strong>@item.QuantityOnHand</strong>
                                </td>
                                <td>
                                    @if (item.QuantityReserved > 0)
                                    {
                                        <span class="badge badge-secondary">@item.QuantityReserved</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">0</span>
                                    }
                                </td>
                                <td>
                                    <strong class="@(item.AvailableQuantity <= 20 ? "text-danger" : "text-success")">
                                        @item.AvailableQuantity
                                    </strong>
                                </td>
                                <td>
                                    @if (item.QuantityOnHand == 0)
                                    {
                                        <span class="badge badge-danger">Hết hàng</span>
                                    }
                                    else if (item.AvailableQuantity <= 0)
                                    {
                                        <span class="badge badge-dark">Đã đặt hết</span>
                                    }
                                    else if (item.AvailableQuantity <= 20)
                                    {
                                        <span class="badge badge-warning">Sắp hết</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">Còn hàng</span>
                                    }
                                </td>
                                <td><small>@item.UpdatedAt.ToString("dd/MM HH:mm")</small></td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.VariantID })" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* Pagination *@
            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new {
                                    page = ViewBag.CurrentPage - 1,
                                    categoryId = ViewBag.CurrentCategoryId,
                                    brandId = ViewBag.CurrentBrandId,
                                    stockStatus = ViewBag.CurrentStockStatus,
                                    search = ViewBag.CurrentSearch
                                })">Trước</a>
                            </li>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new {
                                    page = i,
                                    categoryId = ViewBag.CurrentCategoryId,
                                    brandId = ViewBag.CurrentBrandId,
                                    stockStatus = ViewBag.CurrentStockStatus,
                                    search = ViewBag.CurrentSearch
                                })">@i</a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new {
                                    page = ViewBag.CurrentPage + 1,
                                    categoryId = ViewBag.CurrentCategoryId,
                                    brandId = ViewBag.CurrentBrandId,
                                    stockStatus = ViewBag.CurrentStockStatus,
                                    search = ViewBag.CurrentSearch
                                })">Sau</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>

    @* Statistics Tables *@
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-chart-bar"></i> Top 5 danh mục</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Danh mục</th>
                                <th>Variants</th>
                                <th>Sản phẩm</th>
                                <th>Tổng SL</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stat in ViewBag.CategoryStats)
                            {
                                <tr>
                                    <td><strong>@stat.CategoryName</strong></td>
                                    <td>@stat.VariantCount</td>
                                    <td>@stat.ProductCount</td>
                                    <td><strong class="text-success">@stat.TotalQuantity</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5><i class="fas fa-chart-bar"></i> Top 5 thương hiệu</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Thương hiệu</th>
                                <th>Variants</th>
                                <th>Sản phẩm</th>
                                <th>Tổng SL</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stat in ViewBag.BrandStats)
                            {
                                <tr>
                                    <td><strong>@stat.BrandName</strong></td>
                                    <td>@stat.VariantCount</td>
                                    <td>@stat.ProductCount</td>
                                    <td><strong class="text-success">@stat.TotalQuantity</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 3 seconds
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        }, 3000);
    </script>
}
