@model ClothingStoreWebApp.Models.Brand
@{
    ViewBag.Title = "Chi Tiết Thương Hiệu - " + Model.BrandName;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle"></i>
                        Chi Tiết Thương Hiệu
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.LogoURL))
                            {
                                <img src="@Model.LogoURL" alt="@Model.BrandName" class="img-fluid rounded mb-3" style="max-height: 200px;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded mb-3" style="height: 200px;">
                                    <i class="fas fa-image fa-4x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-9">
                            <table class="table table-bordered">
                                <tr>
                                    <th style="width: 200px;">ID</th>
                                    <td>@Model.BrandID</td>
                                </tr>
                                <tr>
                                    <th>Tên Thương Hiệu</th>
                                    <td><strong>@Model.BrandName</strong></td>
                                </tr>
                                <tr>
                                    <th>Website</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Website))
                                        {
                                            <a href="@Model.Website" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-external-link-alt"></i> @Model.Website
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Trạng thái</th>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Đang hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times-circle"></i> Đã ẩn
                                            </span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Số sản phẩm</th>
                                    <td>
                                        @if (Model.Products != null && Model.Products.Any())
                                        {
                                            var activeCount = Model.Products.Count(p => p.IsActive);
                                            <span class="badge bg-primary">@activeCount sản phẩm hoạt động</span>
                                            if (Model.Products.Count > activeCount)
                                            {
                                                <span class="badge bg-secondary ms-2">@(Model.Products.Count - activeCount) đã ẩn</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có sản phẩm</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Ngày tạo</th>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr />
                        <h5>Mô Tả:</h5>
                        <p class="text-muted">@Model.Description</p>
                    }

                    @if (Model.Products != null && Model.Products.Any(p => p.IsActive))
                    {
                        <hr />
                        <h5>Sản Phẩm Của Thương Hiệu:</h5>
                        <div class="row">
                            @foreach (var product in Model.Products.Where(p => p.IsActive).Take(6))
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-title">@product.ProductName</h6>
                                            <p class="card-text text-muted small">@product.BasePrice.ToString("N0") VNĐ</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        if (Model.Products.Count(p => p.IsActive) > 6)
                        {
                            <p class="text-muted text-center">... và @(Model.Products.Count(p => p.IsActive) - 6) sản phẩm khác</p>
                        }
                    }

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay Lại
                        </a>
                        <div>
                            <a href="@Url.Action("Edit", new { id = Model.BrandID })" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Chỉnh Sửa
                            </a>
                            <a href="@Url.Action("Delete", new { id = Model.BrandID })" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
