@model ClothingStoreWebApp.Models.Category
@{
    ViewBag.Title = "Chỉnh sửa Danh mục";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i>
                        Chỉnh sửa Danh mục
                    </h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                        @Html.HiddenFor(model => model.CategoryID)
                        @Html.HiddenFor(model => model.CreatedAt)

                        <div class="mb-3">
                            @Html.LabelFor(model => model.CategoryName, "Tên Danh mục", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.ParentCategoryID, "Danh mục Cha", new { @class = "form-label fw-bold" })
                            @Html.DropDownList("ParentCategoryID", null, "-- Không có (Danh mục gốc) --", new { @class = "form-select" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Description, "Mô tả", new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "3" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.ImageURL, "URL Hình ảnh", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.ImageURL, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.SortOrder, "Thứ tự sắp xếp", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Trạng thái</label>
                                <div class="form-check form-switch">
                                    @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-check-input" } })
                                    <label class="form-check-label">Hoạt động</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
