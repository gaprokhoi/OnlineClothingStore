                <span class="quick-link-text">Thời Trang Trẻ Em</span>
            </a>
        </div>
    </div>
</section>

@* Featured Products Section (Boxed Style) *@
<section class="featured-section">
    <div class="container">
        <div class="section-header-bar">
            <h2 class="section-title">Sản Phẩm Nổi Bật</h2>
            @Html.ActionLink("Xem tất cả >", "Index", "Product", null, new { @class = "view-all-link" })
        </div>

        <div class="featured-grid">

            @* --- CODE ĐỘNG THAY THẾ CHO SẢN PHẨM TĨNH --- *@
            @if (ViewBag.FeaturedProducts != null)
            {
                foreach (var product in (IEnumerable<ClothingStoreWebApp.Models.Product>)ViewBag.FeaturedProducts)
                {
                    // Lấy ảnh đầu tiên, hoặc ảnh placeholder nếu không có
                    var imageUrl = (product.ProductImages != null && product.ProductImages.Any())
                                     ? product.ProductImages.First().ImageURL
                                     : "https://via.placeholder.com/300x400/eeeeee/333333?text=No+Image";

                    // Link trỏ đến /Product/Details/ID
                    <a href="@Url.Action("Details", "Product", new { id = product.ProductID })" class="product-card-link">
                        <div class="featured-product">
                            <div class="product-image-wrapper">
                                @if (product.IsFeatured)
                                {<div class="product-badge">HOT</div>}
                                <div class="product-image" style="background-image: url('@imageUrl');"></div>
                            </div>
                            <div class="product-info">
                                <div class="product-rating">
                                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                                </div>
                                <h4 class="product-name">@product.ProductName</h4>
                                <div class="product-price-container">
                                    <p class="product-price">@product.BasePrice.ToString("N0") VNĐ</p>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            }
            @* --- KẾT THÚC CODE ĐỘNG --- *@

        </div>
    </div>
</section>

@* Collections Section *@
