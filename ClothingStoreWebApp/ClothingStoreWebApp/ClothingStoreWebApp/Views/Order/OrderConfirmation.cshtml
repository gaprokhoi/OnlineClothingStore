@model ClothingStoreWebApp.Models.Order

@{
    ViewBag.Title = "Đặt Hàng Thành Công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .success-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 60px 20px;
        font-family: 'Futura', 'Helvetica Neue', Arial, sans-serif;
    }

    .success-header {
        text-align: center;
        padding: 60px 40px;
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        border: 2px solid #d4af37;
        margin-bottom: 50px;
        position: relative;
        overflow: hidden;
    }

    .success-header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
        animation: pulse 3s ease-in-out infinite;
    }

  

    .success-header-content {
        position: relative;
        z-index: 1;
    }

    .success-icon {
        font-size: 4rem;
        color: #d4af37;
        margin-bottom: 25px;
        animation: scaleIn 0.5s ease-out;
    }

    

    .success-header h1 {
        font-size: 2.5rem;
        font-weight: 300;
        letter-spacing: 4px;
        text-transform: uppercase;
        color: #d4af37;
        margin-bottom: 15px;
    }

    .order-number {
        font-size: 1.1rem;
        color: #fff;
        letter-spacing: 2px;
        font-weight: 400;
    }

    .order-number strong {
        color: #d4af37;
        font-weight: 600;
    }

    .thank-you-message {
        text-align: center;
        padding: 35px;
        background: linear-gradient(to bottom, #f8f8f8 0%, #fff 100%);
        border-left: 4px solid #d4af37;
        border-right: 4px solid #d4af37;
        margin-bottom: 50px;
    }

    .thank-you-message h3 {
        font-size: 1.3rem;
        font-weight: 400;
        letter-spacing: 2px;
        color: #1a1a1a;
        margin-bottom: 15px;
    }

    .thank-you-message p {
        color: #666;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
        margin: 0;
    }

    .lv-info-card {
        background: #fff;
        border: 1px solid #e5e5e5;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        margin-bottom: 30px;
        transition: all 0.3s ease;
    }

    .lv-info-card:hover {
        box-shadow: 0 4px 20px rgba(0,0,0,0.12);
        transform: translateY(-2px);
    }

    .card-header-lv {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        color: #d4af37;
        padding: 20px 25px;
        border: none;
    }

    .card-header-lv h5 {
        margin: 0;
        font-size: 1rem;
        font-weight: 400;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    .card-body-lv {
        padding: 30px;
    }

    .info-table {
        width: 100%;
    }

    .info-table tr {
        border-bottom: 1px solid #f5f5f5;
    }

    .info-table tr:last-child {
        border-bottom: none;
    }

    .info-table td {
        padding: 12px 0;
        font-size: 0.9rem;
    }

    .info-table td:first-child {
        color: #666;
        letter-spacing: 0.5px;
        width: 40%;
    }

    .info-table td:last-child {
        color: #1a1a1a;
        font-weight: 500;
    }

    .badge-lv {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 2px;
        font-size: 0.75rem;
        font-weight: 500;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        border: 1px solid;
    }

    .badge-warning {
        background: #fff8e1;
        color: #f57c00;
        border-color: #f57c00;
    }

    .badge-danger {
        background: #ffebee;
        color: #c62828;
        border-color: #c62828;
    }

    .shipping-info p {
        margin-bottom: 15px;
        line-height: 1.8;
        color: #333;
    }

    .shipping-info strong {
        color: #1a1a1a;
        display: block;
        margin-bottom: 5px;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .shipping-info i {
        color: #d4af37;
        margin-right: 8px;
        width: 18px;
        text-align: center;
    }

    .order-items-table {
        width: 100%;
        border-collapse: collapse;
    }

    .order-items-table thead {
        background: #f8f8f8;
    }

    .order-items-table th {
        padding: 18px 15px;
        color: #1a1a1a;
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 1px;
        text-transform: uppercase;
        border-bottom: 2px solid #e5e5e5;
    }

    .order-items-table tbody tr {
        border-bottom: 1px solid #f0f0f0;
        transition: background 0.3s ease;
    }

    .order-items-table tbody tr:hover {
        background: #fafafa;
    }

    .order-items-table td {
        padding: 20px 15px;
        color: #333;
        font-size: 0.9rem;
    }

    .product-name {
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 5px;
    }

    .product-sku {
        color: #999;
        font-size: 0.8rem;
        letter-spacing: 0.3px;
    }

    .summary-table {
        width: 100%;
    }

    .summary-table tr {
        border-bottom: 1px solid #f0f0f0;
    }

    .summary-table tr:last-child {
        border-bottom: none;
        border-top: 2px solid #d4af37;
    }

    .summary-table td {
        padding: 15px 0;
        font-size: 0.95rem;
    }

    .summary-table td:first-child {
        color: #666;
        font-weight: 500;
    }

    .summary-table td:last-child {
        text-align: right;
        color: #1a1a1a;
        font-weight: 600;
    }

    .summary-total td {
        padding: 20px 0 !important;
    }

    .summary-total h4 {
        margin: 0;
        font-size: 1.3rem;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .summary-total .total-amount {
        color: #1a1a1a;
    }

    .gift-message-box {
        padding: 30px;
        background: linear-gradient(to bottom, #fafafa 0%, #fff 100%);
        border: 1px solid #e5e5e5;
        border-left: 4px solid #d4af37;
        margin-top: 30px;
    }

    .gift-message-box h5 {
        font-size: 1.1rem;
        font-weight: 500;
        letter-spacing: 1.5px;
        color: #1a1a1a;
        margin-bottom: 15px;
        text-transform: uppercase;
    }

    .gift-message-box p {
        color: #666;
        line-height: 1.8;
        margin: 0;
        font-style: italic;
    }

    .action-buttons {
        text-align: center;
        padding: 50px 20px;
        border-top: 1px solid #e5e5e5;
        margin-top: 40px;
    }

    .btn-lv-primary {
        padding: 18px 40px;
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        color: #d4af37;
        border: 2px solid #d4af37;
        font-size: 0.95rem;
        font-weight: 500;
        letter-spacing: 2px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin: 0 10px;
    }

    .btn-lv-primary:hover {
        background: #d4af37;
        color: #1a1a1a;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(212, 175, 55, 0.3);
        text-decoration: none;
    }

    .btn-lv-secondary {
        padding: 18px 40px;
        background: transparent;
        color: #666;
        border: 2px solid #d4d4d4;
        font-size: 0.95rem;
        font-weight: 500;
        letter-spacing: 2px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin: 0 10px;
    }

    .btn-lv-secondary:hover {
        background: #f5f5f5;
        color: #1a1a1a;
        border-color: #999;
        transform: translateY(-2px);
        text-decoration: none;
    }

    .contact-info {
        text-align: center;
        padding: 30px;
        background: #fafafa;
        border: 1px solid #e5e5e5;
        margin-top: 30px;
    }

    .contact-info p {
        color: #666;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        line-height: 1.8;
        margin: 0;
    }

    .contact-info strong {
        color: #1a1a1a;
        font-weight: 600;
    }

    .text-discount {
        color: #c62828;
    }


