            font-size: 3rem;
        }

        .card-body-lv {
            padding: 20px;
        }

        .btn-lv-primary,
        .btn-lv-secondary {
            display: block;
            width: 100%;
            margin: 10px 0;
        }

        .order-items-table {
            font-size: 0.8rem;
        }

        .order-items-table th,
        .order-items-table td {
            padding: 12px 8px;
        }
    }
</style>

<div class="success-container">
    <!-- Success Header -->
    <div class="success-header">
        <div class="success-header-content">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1>Đặt Hàng Thành Công</h1>
            <p class="order-number">Mã đơn hàng: <strong>@Model.OrderNumber</strong></p>
        </div>
    </div>

    <!-- Thank You Message -->
    <div class="thank-you-message">
        <h3><i class="fas fa-heart"></i> Cảm Ơn Bạn Đã Mua Hàng!</h3>
        <p>Đơn hàng của bạn đã được tiếp nhận và đang được xử lý.</p>
    </div>

    <!-- Order Info Grid -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="lv-info-card">
                <div class="card-header-lv">
                    <h5><i class="fas fa-info-circle"></i> Thông Tin Đơn Hàng</h5>
                </div>
                <div class="card-body-lv">
                    <table class="info-table">
                        <tr>
                            <td><strong>Mã đơn:</strong></td>
                            <td>@Model.OrderNumber</td>
                        </tr>
                        <tr>
                            <td><strong>Ngày đặt:</strong></td>
                            <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td><strong>Trạng thái:</strong></td>
                            <td>
                                <span class="badge-lv badge-warning">
                                    @(Model.OrderStatus != null ? Model.OrderStatus.StatusName : "Đang xử lý")
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Thanh toán:</strong></td>
                            <td>@Model.PaymentMethod</td>
                        </tr>
                        <tr>
                            <td><strong>Trạng thái TT:</strong></td>
                            <td><span class="badge-lv badge-danger">@Model.PaymentStatus</span></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="lv-info-card">
                <div class="card-header-lv">
                    <h5><i class="fas fa-shipping-fast"></i> Địa Chỉ Giao Hàng</h5>
                </div>
                <div class="card-body-lv shipping-info">
                    <p>
                        <strong><i class="fas fa-user"></i> Người nhận:</strong>
                        @Model.ShippingFullName
                    </p>
                    <p>
                        <strong><i class="fas fa-map-marker-alt"></i> Địa chỉ:</strong>
                        @Model.ShippingAddressLine1
                        @if (!string.IsNullOrEmpty(Model.ShippingAddressLine2))
                        {
                            <br />@Model.ShippingAddressLine2
                        }
                    </p>
                    <p>
                        <strong><i class="fas fa-city"></i> Thành phố:</strong>
                        @Model.ShippingCity
                    </p>
                    <p>
                        <strong><i class="fas fa-mail-bulk"></i> Mã bưu điện:</strong>
                        @Model.ShippingPostalCode
                    </p>
                    <p style="margin-bottom: 0;">
                        <strong><i class="fas fa-flag"></i> Quốc gia:</strong>
                        @Model.ShippingCountry
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Items -->
    <div class="lv-info-card">
        <div class="card-header-lv">
            <h5><i class="fas fa-box"></i> Chi Tiết Đơn Hàng</h5>
        </div>
        <div class="card-body-lv" style="padding: 0;">
            <div class="table-responsive">
                <table class="order-items-table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Màu sắc</th>
                            <th>Kích thước</th>
                            <th style="text-align: center;">Số lượng</th>
                            <th style="text-align: right;">Đơn giá</th>
                            <th style="text-align: right;">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.OrderItems != null && Model.OrderItems.Any())
                        {
                            foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>
                                        <div class="product-name">@item.ProductName</div>
                                        <div class="product-sku">SKU: @item.SKU</div>
                                    </td>
                                    <td>@item.ColorName</td>
                                    <td>@item.SizeName</td>
                                    <td style="text-align: center;">@item.Quantity</td>
                                    <td style="text-align: right;">@item.UnitPrice.ToString("N0") đ</td>
                                    <td style="text-align: right;"><strong>@item.TotalPrice.ToString("N0") đ</strong></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Order Summary -->
    <div class="row mt-4">
        <div class="col-md-6 offset-md-6">
            <div class="lv-info-card">
                <div class="card-body-lv">
                    <table class="summary-table">
                        <tr>
                            <td><strong>Tạm tính:</strong></td>
                            <td>@Model.SubTotal.ToString("N0") đ</td>
                        </tr>
                        <tr>
                            <td><strong>Phí vận chuyển:</strong></td>
                            <td>@Model.ShippingAmount.ToString("N0") đ</td>
                        </tr>
                        @if (Model.TaxAmount > 0)
                        {
                            <tr>
                                <td><strong>Thuế:</strong></td>
                                <td>@Model.TaxAmount.ToString("N0") đ</td>
                            </tr>
                        }
                        @if (Model.DiscountAmount > 0)
                        {
                            <tr>
                                <td><strong>Giảm giá:</strong></td>
                                <td class="text-discount">-@Model.DiscountAmount.ToString("N0") đ</td>
                            </tr>
                        }
                        <tr class="summary-total">
                            <td><h4>Tổng cộng:</h4></td>
                            <td><h4 class="total-amount">@Model.TotalAmount.ToString("N0") đ</h4></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @if (Model.IsGift && !string.IsNullOrEmpty(Model.GiftMessage))
    {
        <div class="gift-message-box">
            <h5><i class="fas fa-gift"></i> Lời Nhắn Quà Tặng</h5>
            <p>@Model.GiftMessage</p>
        </div>
    }

    <!-- Action Buttons -->
    <div class="action-buttons">
        <a href="@Url.Action("MyOrders", "Order")" class="btn-lv-primary">
            <i class="fas fa-list-ul"></i> Xem Đơn Hàng Của Tôi
        </a>
        <a href="@Url.Action("Index", "Product")" class="btn-lv-secondary">
            <i class="fas fa-shopping-bag"></i> Tiếp Tục Mua Sắm
        </a>
    </div>

    <!-- Contact Info -->
    <div class="contact-info">
        <p>
            <i class="fas fa-info-circle"></i>
            Nếu có thắc mắc về đơn hàng, vui lòng liên hệ hotline: <strong>1900-xxxx</strong>
            <br />hoặc email: <strong>support@clothingstore.com</strong>
        </p>
    </div>
</div>