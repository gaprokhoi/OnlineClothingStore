@* Filters Section *@
@using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "lv-filter-section" }))
{
    <div class="lv-filter-card">
        <div class="row g-3 align-items-end">
            <div class="col-lg-2 col-md-3 col-sm-6">
                <label class="form-label">Danh mục gốc</label>
                @Html.DropDownList("parentCategoryId", ViewBag.ParentCategoryId as SelectList, "-- Tất cả --", new { @class = "form-select", @id = "parentCategorySelect" })
            </div>

            <div class="col-lg-2 col-md-3 col-sm-6">
                <label class="form-label">Danh mục con</label>
                @Html.DropDownList("categoryId", ViewBag.CategoryId as SelectList, "-- Tất cả --", new { @class = "form-select", @id = "categorySelect" })
            </div>

            <div class="col-lg-2 col-md-3 col-sm-6">
                <label class="form-label">Thương hiệu</label>
                @Html.DropDownList("brandId", ViewBag.BrandId as SelectList, "-- Tất cả --", new { @class = "form-select" })
            </div>

            <div class="col-lg-3 col-md-6 col-sm-6">
                <label class="form-label">Tìm kiếm</label>
                <div class="input-group">
                    <input type="text" name="searchTerm" value="@Request.QueryString["searchTerm"]" class="form-control" placeholder="Tìm kiếm sản phẩm..." />
                    <button type="submit" class="btn btn-outline-dark">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

            <div class="col-lg-2 col-md-3 col-sm-6">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i> Tìm
                </button>
            </div>

            <div class="col-lg-1 col-md-3 col-sm-6">
                <a href="@Url.Action("Index", "Product")" class="btn btn-outline-dark w-100" title="Reset Filters">
                    <i class="fas fa-redo"></i>
                </a>
            </div>
        </div>
    </div>
}

