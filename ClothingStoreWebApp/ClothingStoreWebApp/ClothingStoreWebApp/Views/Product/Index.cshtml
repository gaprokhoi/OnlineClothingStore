@model IEnumerable<ClothingStoreWebApp.Models.Product>
@{
    ViewBag.Title = "Sản phẩm";
}

<style>
    :root {
        --lv-brown: #5e3a1f;
        --lv-gold: #c9a961;
        --lv-black: #1a1a1a;
        --lv-cream: #f5f3f0;
        --lv-white: #ffffff;
    }

    body {
        font-family: 'Helvetica Neue', Arial, sans-serif;
        background-color: var(--lv-white);
        color: var(--lv-black);
        letter-spacing: 0.02em;
    }

    /* Hero Section */
    .lv-hero {
        background-color: var(--lv-cream);
        padding: 60px 0 40px;
        text-align: center;
        border-bottom: 1px solid #e0ddd8;
        margin-bottom: 0;
    }

        .lv-hero h2 {
            font-size: 2.5rem;
            font-weight: 300;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            margin-bottom: 15px;
        }

        .lv-hero .hero-subtitle {
            font-size: 0.9rem;
            color: #666;
            letter-spacing: 0.05em;
            font-weight: 300;
        }

    .admin-controls {
        margin-top: 20px;
    }

        .admin-controls .btn {
            border: 1px solid var(--lv-black);
            padding: 10px 30px;
            font-size: 0.85rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            font-weight: 400;
            background: transparent;
            color: var(--lv-black);
            text-decoration: none;
            display: inline-block;
        }

            .admin-controls .btn:hover {
                background: var(--lv-black);
                color: var(--lv-white);
            }

    /* Filter Section */
    .lv-filter-section {
        background-color: var(--lv-white);
        padding: 30px 0;
        border-bottom: 1px solid #e0ddd8;
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .lv-filter-card {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 40px;
        border: none;
        box-shadow: none;
    }

    .lv-filter-row {
        display: flex;
        gap: 20px;
        align-items: center;
        flex-wrap: wrap;
    }

        .lv-filter-row .col-md-3,
        .lv-filter-row .col-md-4,
        .lv-filter-row .col-md-2 {
            flex: 1;
            min-width: 200px;
        }

        .lv-filter-row .form-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: #666;
            margin-bottom: 8px;
            font-weight: 400;
        }

        .lv-filter-row .form-select,
        .lv-filter-row .form-control {
            border: 1px solid var(--lv-black);
            padding: 12px 20px;
            font-size: 0.85rem;
            letter-spacing: 0.05em;
            border-radius: 0;
            background-color: var(--lv-white);
        }

        .lv-filter-row .btn-primary {
            background-color: var(--lv-black);
            border: 1px solid var(--lv-black);
            padding: 12px 30px;
            font-size: 0.85rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            font-weight: 400;
            border-radius: 0;
            width: 100%;
        }

            .lv-filter-row .btn-primary:hover {
                background-color: transparent;
                color: var(--lv-black);
            }

    /* Results Bar */
    .lv-results-bar {
        max-width: 1400px;
        margin: 0 auto;
        padding: 30px 40px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .lv-results-bar .text-muted {
            font-size: 0.85rem;
            color: #666;
            letter-spacing: 0.05em;
        }

        .lv-results-bar .dropdown-toggle {
            background: transparent;
            border: 1px solid var(--lv-black);
            color: var(--lv-black);
            padding: 10px 25px;
            font-size: 0.85rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            font-weight: 400;
            border-radius: 0;
        }

        .lv-results-bar .dropdown-menu {
            border-radius: 0;
            border: 1px solid var(--lv-black);
        }

        .lv-results-bar .dropdown-item {
            font-size: 0.85rem;
            letter-spacing: 0.05em;
            padding: 12px 20px;
            text-decoration: none;
            color: var(--lv-black);
        }

            .lv-results-bar .dropdown-item:hover {
                background-color: var(--lv-black);
                color: var(--lv-white);
            }

    /* Product Grid */
    .lv-products-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 40px 60px;
    }

    .lv-product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 60px 40px;
    }

    /* Product Card */
    .lv-product-card {
        text-align: left;
        cursor: pointer;
        position: relative;
        border: none;
        box-shadow: none;
        background: transparent;
    }

    .lv-image-wrapper {
        position: relative;
        width: 100%;
        aspect-ratio: 3/4;
        overflow: hidden;
        background-color: var(--lv-cream);
        margin-bottom: 20px;
    }

    .lv-product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .lv-product-card:hover .lv-product-image {
        transform: scale(1.05);
    }

    .lv-no-image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--lv-cream);
    }

    .lv-featured-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background-color: var(--lv-gold);
        color: var(--lv-white);
        padding: 5px 15px;
        font-size: 0.7rem;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        font-weight: 500;
        border: none;
        border-radius: 0;
        z-index: 2;
    }

    .lv-card-body {
        padding: 0 5px;
    }

    .lv-category {
        font-size: 0.75rem;
        color: #999;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        margin-bottom: 8px;
        font-weight: 400;
    }

    .lv-product-title {
        font-size: 1rem;
        color: var(--lv-black);
        margin-bottom: 12px;
        font-weight: 400;
        letter-spacing: 0.02em;
        line-height: 1.4;
        min-height: 2.8em;
    }

    .lv-description {
        display: none;
    }

    .lv-product-price {
        font-size: 0.95rem;
        color: var(--lv-black);
        font-weight: 400;
        letter-spacing: 0.05em;
        margin-bottom: 15px;
    }

    .lv-product-meta {
        font-size: 0.8rem;
        color: #999;
        margin-bottom: 15px;
    }

    .lv-product-cta {
        display: flex;
        gap: 10px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .lv-product-card:hover .lv-product-cta {
        opacity: 1;
    }

    .lv-btn-details {
        flex: 1;
        background-color: transparent;
        color: var(--lv-black);
        border: 1px solid var(--lv-black);
        padding: 12px 20px;
        font-size: 0.8rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        font-weight: 400;
        border-radius: 0;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .lv-btn-details:hover {
            background-color: var(--lv-black);
            color: var(--lv-white);
        }

    /* ✅ NEW WISHLIST BUTTON STYLES */
    .btn-wishlist-small {
        width: 40px;
        height: 40px;
        border: 1px solid var(--lv-black);
        background: var(--lv-white);
        border-radius: 0;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #dc3545;
        font-size: 16px;
        flex-shrink: 0;
    }

        .btn-wishlist-small:hover {
            border-color: #dc3545;
            background: #dc3545;
            color: #fff;
            transform: scale(1.05);
        }

        .btn-wishlist-small.active {
            background: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

            .btn-wishlist-small.active i {
                animation: heartBeat 0.3s ease;
            }

    keyframes heartBeat {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.3);
        }
    }

    /* Pagination */
    .lv-pagination-container {
        text-align: center;
        padding: 60px 0;
        border-top: 1px solid #e0ddd8;
        margin-top: 40px;
    }

    .lv-pagination {
        display: inline-flex;
        gap: 5px;
        align-items: center;
        padding-left: 0;
    }

        .lv-pagination .page-item {
            list-style: none;
        }

        .lv-pagination .page-link {
            background: transparent;
            border: 1px solid #e0ddd8;
            color: var(--lv-black);
            padding: 10px 18px;
            font-size: 0.85rem;
            min-width: 45px;
            text-align: center;
            text-decoration: none;
            border-radius: 0;
            display: block;
        }

            .lv-pagination .page-link:hover,
            .lv-pagination .page-item.active .page-link {
                background-color: var(--lv-black);
                color: var(--lv-white);
                border-color: var(--lv-black);
            }

    /* Toast Styles */
    .custom-toast {
        animation: slideInRight 0.3s ease;
    }

    keyframes slideInRight {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
</style>

<div class="lv-hero">
    <h2>
        <i class="fas fa-tshirt"></i>
        Bộ Sưu Tập
    </h2>
    <p class="hero-subtitle">Khám phá những sản phẩm thời trang cao cấp</p>

    @if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
    {
        <div class="admin-controls">
            @Html.ActionLink("Quản lý sản phẩm", "Index", "Admin", null, new { @class = "btn btn-warning" })
        </div>
