@* Product Grid *@
<div class="lv-products-container">
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <p class="lead text-muted">Không tìm thấy sản phẩm nào phù hợp.</p>
        </div>
    }
    else
    {
        <div class="lv-product-grid">
            @foreach (var item in Model)
            {
                <div class="lv-product-card">
                    <div class="lv-image-wrapper">
                        <a href="@Url.Action("Details", "Product", new { id = item.ProductID })">
                            @if (item.ProductImages != null && item.ProductImages.Any())
                            {
                                var primaryImage = item.ProductImages.OrderBy(pi => pi.SortOrder).FirstOrDefault();
                                <img src="@primaryImage.ImageURL" class="lv-product-image" alt="@item.ProductName">
                            }
                            else
                            {
                                <div class="lv-no-image">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                        </a>

                        @if (item.IsFeatured)
                        {
                            <span class="badge lv-featured-badge">
                                <i class="fas fa-star"></i> Nổi bật
                            </span>
                        }
                    </div>

                    <div class="lv-card-body">
                        <div class="lv-category">
                            @if (item.Category != null)
                            {
                                if (item.Category.ParentCategory != null)
                                {
                                    <text>@item.Category.ParentCategory.CategoryName > @item.Category.CategoryName</text>
                                }
                                else
                                {
                                    <text>@item.Category.CategoryName</text>
                                }
                            }
                            @(item.Brand != null ? "• " + item.Brand.BrandName : "")
                        </div>

                        <h6 class="lv-product-title">
                            <a href="@Url.Action("Details", "Product", new { id = item.ProductID })" class="text-dark text-decoration-none">@item.ProductName</a>
                        </h6>

                        <div class="lv-product-price">@item.BasePrice.ToString("N0") ₫</div>

                        <div class="lv-product-meta text-muted">@item.Gender</div>

                        <div class="lv-product-cta">
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "lv-btn-details" })
                            <button type="button"
                                    class="btn-wishlist-small"
                                    onclick="toggleWishlist(@item.ProductID, this)"
                                    data-product-id="@item.ProductID"
                                    title="Thêm vào yêu thích">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @* Pagination *@
    @if (ViewBag.TotalPages > 1)
    {
        <div class="lv-pagination-container">
            <ul class="lv-pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        @Html.ActionLink("←", "Index", new { page = ViewBag.CurrentPage - 1, parentCategoryId = Request.QueryString["parentCategoryId"], categoryId = Request.QueryString["categoryId"], brandId = Request.QueryString["brandId"], searchTerm = Request.QueryString["searchTerm"], sortBy = Request.QueryString["sortBy"] }, new { @class = "page-link" })
                    </li>
                }

                @for (int i = StartPage(ViewBag.CurrentPage, ViewBag.TotalPages); i <= EndPage(ViewBag.CurrentPage, ViewBag.TotalPages); i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        @Html.ActionLink(i.ToString(), "Index", new { page = i, parentCategoryId = Request.QueryString["parentCategoryId"], categoryId = Request.QueryString["categoryId"], brandId = Request.QueryString["brandId"], searchTerm = Request.QueryString["searchTerm"], sortBy = Request.QueryString["sortBy"] }, new { @class = "page-link" })
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        @Html.ActionLink("→", "Index", new { page = ViewBag.CurrentPage + 1, parentCategoryId = Request.QueryString["parentCategoryId"], categoryId = Request.QueryString["categoryId"], brandId = Request.QueryString["brandId"], searchTerm = Request.QueryString["searchTerm"], sortBy = Request.QueryString["sortBy"] }, new { @class = "page-link" })
                    </li>
                }
            </ul>
        </div>
    }
</div>

