            <li>@Html.ActionLink("Giá thấp đến cao", "Index", new { sortBy = "price_asc", parentCategoryId = Request.QueryString["parentCategoryId"], categoryId = Request.QueryString["categoryId"], brandId = Request.QueryString["brandId"], searchTerm = Request.QueryString["searchTerm"] }, new { @class = "dropdown-item" })</li>
            <li>@Html.ActionLink("Giá cao đến thấp", "Index", new { sortBy = "price_desc", parentCategoryId = Request.QueryString["parentCategoryId"], categoryId = Request.QueryString["categoryId"], brandId = Request.QueryString["brandId"], searchTerm = Request.QueryString["searchTerm"] }, new { @class = "dropdown-item" })</li>
            <li>@Html.ActionLink("Mới nhất", "Index", new { sortBy = "newest", parentCategoryId = Request.QueryString["parentCategoryId"], categoryId = Request.QueryString["categoryId"], brandId = Request.QueryString["brandId"], searchTerm = Request.QueryString["searchTerm"] }, new { @class = "dropdown-item" })</li>
